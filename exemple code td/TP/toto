#INCLUDE <STDIO.H>
#INCLUDE <UNISTD.H>
#DEFINE TBUFFER 20

INT MAIN(INT ARGC, CHAR ** ARGV)
{		
	CHAR BUFFER[TBUFFER];
	INT I;
	INT NBREAD;

	WHILE((NBREAD = READ(0,BUFFER,TBUFFER))> 0)
	{
		FOR(I=0;I<NBREAD;I++)
		{
			IF(BUFFER[I]>='A' && BUFFER[I]<='Z')
			{
				BUFFER[I] += 'A' - 'A';
			}
		}
	
		INT NBWRITE = WRITE(1,BUFFER,NBREAD);
	
		IF(NBWRITE != NBREAD)
		{
			PERROR("ERREUR");
		}
	}
	RETURN 0;
}
